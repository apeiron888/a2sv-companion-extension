{
  "manifest_version": 3,
  "name": "A2SV Companion",
  "version": "2.0.0",
  "description": "Automatically push code to GitHub and update progress sheets from LeetCode, Codeforces, and HackerRank.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab", "identity"],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://codeforces.com/*",
    "https://www.hackerrank.com/*",
    "https://a2sv-companion-backend.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content/shared.js", "content/leetcode.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://codeforces.com/contest/*/submission/*", "https://codeforces.com/problemset/submission/*"],
      "js": ["content/shared.js", "content/codeforces.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://codeforces.com/contest/*/problem/*", "https://codeforces.com/problemset/problem/*"],
      "js": ["content/shared.js", "content/codeforces-problem.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.hackerrank.com/challenges/*/problem*"],
      "js": ["content/shared.js", "content/hackerrank.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["register.html", "success.html", "error.html", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
